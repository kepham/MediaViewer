<UserControl
    x:Class="MediaViewer.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MediaViewer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid TextBlock.FontSize="72">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Grid.ColumnSpan="2"
            Click="Video_Click"
            Content="Video" />
        <Button
            Grid.Row="1"
            Click="Music_Click"
            Content="Music" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Click="Pictures_Click"
            Content="Pictures" />
    </Grid>
</UserControl>
